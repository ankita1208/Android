<!-- dialog_blood_group.xml -->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/urgencyLevelTitleTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/dialog_bg"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="15dp"
            android:text="Urgency Level"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/dialog_botton_bg"
            app:layout_constraintTop_toBottomOf="@id/urgencyLevelTitleTV"
            app:layout_constraintStart_toStartOf="@id/urgencyLevelTitleTV"
            app:layout_constraintEnd_toEndOf="@id/urgencyLevelTitleTV"
            android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/urgencyLevelRadioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/lowRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Low"
                android:textColor="@color/medium_neutral_gray"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/moderateRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Moderate"
                android:textColor="@color/medium_neutral_gray"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/highRadioButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="High"
                android:textColor="@color/medium_neutral_gray"
                android:textStyle="bold" />
        </RadioGroup>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
