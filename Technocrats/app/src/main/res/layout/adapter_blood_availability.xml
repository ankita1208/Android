<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="BloodType: A+ \n Quantity: 2 Bottle \n Donor: John Petter"
        android:textColor="@color/medium_neutral_gray"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viewV"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="@color/neutral_gray"
        app:layout_constraintEnd_toEndOf="@id/textTV"
        app:layout_constraintStart_toStartOf="@id/textTV"
        app:layout_constraintTop_toBottomOf="@id/textTV" />

</androidx.constraintlayout.widget.ConstraintLayout>